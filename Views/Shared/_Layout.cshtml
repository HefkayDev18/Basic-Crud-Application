<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CrudApplication.styles.css" asp-append-version="true" />
    <link rel="icon" href="~/favicon.png" type="image/x-icon" /> @*Icon from icons8*@
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm  navbar-dark bg-primary border-bottom box-shadow mb-3" style="border-radius: 8px">
            <div class="container-fluid">
                <a class="navbar-brand px-2" asp-area="" asp-controller="Home" asp-action="Index">StaffApplication</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav mx-auto"> 
                        <li class="nav-item px-3">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index"><b>Home</b></a>
                        </li>
                        <li class="nav-item dropdown">
                             <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><b>Employee Actions</b></a>
                              <div class="dropdown-menu text-white bg-primary" style="width:200px;">
                                 <a style="font-size: 13px;" class="nav-link px-3" asp-area="" asp-controller="EmployeeActions" asp-action="ViewEmployee">View Employee(s)</a>
                                 <a style="font-size: 13px;" class="nav-link px-3" asp-area="" asp-controller="EmployeeActions" asp-action="CreateEmployee">Add Employee(s)</a>
                                 <a style="font-size: 13px;" class="nav-link px-3" asp-area="" asp-controller="EmployeeActions" asp-action="AddEmployeeCategory">Add Employee Category</a>
                              </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - CrudApplication - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
