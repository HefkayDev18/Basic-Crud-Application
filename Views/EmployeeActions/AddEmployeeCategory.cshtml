@model CrudApplication.Models.AddEmployeeCatViewModel
@{
    ViewData["Title"] = "Add Employee Category";
}

<br />
<h2 class="text-info">Add Employee Category</h2>

<div class="border container mt-4 px-4 py-4">
    @if(!string.IsNullOrEmpty(ViewBag.Message))
    {
        <span class="alert text-success">@ViewBag.Message</span>
    }
    @if (!string.IsNullOrEmpty(ViewBag.Message2))
    {
        <span class="alert text-danger">@ViewBag.Message2</span>
    }
    <form method="post" asp-action="AddEmployeeCategory" asp-controller="EmployeeActions" role="form">
         @Html.AntiForgeryToken()     

     <div class="col-12">

     <div class="row"> 
       <div class="mb-3 col-6">
          <label asp-for="CategoryName" class="form-label">Category Name</label>
          <input type="text" class="form-control" asp-for="CategoryName" placeholder="Enter Category Name..." required/>
          <span asp-validation-for="CategoryName" class="text-danger"></span>
       </div>
     </div> 
     
     </div>    
      
       <button type="submit" class="btn btn-primary">Add Category</button>
     </form>  
</div>

